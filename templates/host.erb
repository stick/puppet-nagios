define host {
    use                         <%= nagios_template %>
    host_name                   <%= fqdn %>
    address                     <%= ipaddress %>
<% unless host_groups.empty? -%>
    hostgroups                  <%= host_groups %>
<% end -%>
    alias                       <%= nagios_alias %>
    contact_groups              <%= contact_groups %> 
    parents                     <%= parents %>
}
